{
  "name": "cypress-cucumber-template",
  "version": "1.0.0",
  "description": "Cypress & Cucumber testing template with pre-defined steps. Visual, sitemap, performance, API testing included.",
  "author": "Lukasz Wysocki <kontakt@lukaszwysocki.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/l-wysocki/cypress-cucumber-template"
  },
  "keywords": [
    "Cypress",
    "Cucumber",
    "Gherkin",
    "Boilerplate"
  ],
  "devDependencies": {
    "@4tw/cypress-drag-drop": "^2.2.3",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@cypress-audit/lighthouse": "^1.3.1",
    "browserstack-cypress-cli": "^1.19.2",
    "cypress": "^12.17.1",
    "cypress-image-diff-js": "^1.23.0",
    "esbuild": "^0.18.14",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "mochawesome": "^7.1.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6",
    "x2js": "^3.4.4"
  },
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^18.0.1",
    "cypress-visual-regression": "^3.0.0"
  },
  "scripts": {
    "lint": "npx eslint --fix",
    "cypress:open": "npx run cypress open",
    "cypress:run": "npx cypress run --reporter mochawesome",
    "cy:run:chrome": "npx cypress run --browser chrome",
    "cy:run:electron": "npx cypress run --browser electron",
    "cy:run:edge": "npx cypress run --browser edge",
    "cy:run:firefox": "npx cypress run --browser firefox",
    "prettier": "npx prettier -w .",
    "delete:reports": "rm cypress/results/* || true"
  }
}

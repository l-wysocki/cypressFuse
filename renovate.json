{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 4,
  "automerge": true,
  "autoApprove": true,
  "schedule": ["after 10pm on every Saturday", "every weekend"],
  "timezone": "America/New_York",
  "labels": [
    "dependencies",
    "renovate"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "eslint"
      ],
      "labels": [
        "linting"
      ]
    },
    {
      "matchDepTypes": [
        "optionalDependencies"
      ],
      "addLabels": [
        "optional"
      ]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
